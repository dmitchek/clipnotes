<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="front"
        android:id="@id/creator_side_text"
        android:layout_weight="2"
        android:textAlignment="center"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@id/creator_text"
        android:layout_weight="1"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="capture new"
        android:id="@id/creator_new"
        android:layout_weight="2"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="choose existing capture"
        android:id="@id/creator_choose_existing"
        android:layout_weight="2"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="choose file"
        android:id="@id/creator_choose_file"
        android:layout_weight="2"/>

</LinearLayout>